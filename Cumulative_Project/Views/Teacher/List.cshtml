@model IEnumerable<Cumulative_Project.Models.Teacher>
@{
    ViewBag.Title = "Teacher Lists";
}


<a class="navlink" href="/">Back To School</a>

<div id="containerlist">
    <form action="/Teacher/List" method="GET" id="teacherSearchForm">
        <label for="name">Search by Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter teacher's name">

        <label for="hireDate">Hire Date:</label>
        <input type="date" id="hireDate" name="hireDate">

        <label for="salary">Salary:</label>
        <input type="number" id="salary" name="salary" placeholder="Enter salary">

        <button type="submit">Search</button>
    </form>


    <h2>Find Teacher (By, First name / Last name)</h2>
    <form action="/Teacher/List" method="GET">
        <input type="text" name="SearchKey" autocomplete="off" id="searchkey" placeholder="Enter teacher's name" />
        <input type="submit" value="Search" id="submitBtn" />
    </form>
    <h2>List of Classess</h2>
    <table>
        <thead>
            <tr>
                <th>Teacher Id</th>
                <th>Teacher Name</th>
                <th>Teacher Employee Number</th>
                <th>Hire Date</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td><a href="/Teacher/Show/@teacher.teacherId">@teacher.teacherId</a></td>
                    <td>@teacher.teacherFname @teacher.teacherLname</td>
                    <td>@teacher.teacherEmployeeNumber</td>
                    <td>@teacher.teacherHireDate</td>
                    <td>@teacher.salary</td>
                </tr>
            }
        </tbody>
    </table>
</div>
